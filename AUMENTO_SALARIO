public static String calcularAumentoSalario(double salarioAtual) {
    if (salarioAtual <= 400.00) {
        double novoSalario = salarioAtual * 1.15;
        double aumento = novoSalario - salarioAtual;
        return String.format("Novo salario: %.2f\nReajuste ganho: %.2f\nEm percentual: 15 %%", novoSalario, aumento);
    } else if (salarioAtual <= 800.00) {
        double novoSalario = salarioAtual * 1.12;
        double aumento = novoSalario - salarioAtual;
        return String.format("Novo salario: %.2f\nReajuste ganho: %.2f\nEm percentual: 12 %%", novoSalario, aumento);
    } else if (salarioAtual <= 1200.00) {
        double novoSalario = salarioAtual * 1.10;
        double aumento = novoSalario - salarioAtual;
        return String.format("Novo salario: %.2f\nReajuste ganho: %.2f\nEm percentual: 10 %%", novoSalario, aumento);
    } else if (salarioAtual <= 2000.00) {
        double novoSalario = salarioAtual * 1.07;
        double aumento = novoSalario - salarioAtual;
        return String.format("Novo salario: %.2f\nReajuste ganho: %.2f\nEm percentual: 7 %%", novoSalario, aumento);
    } else {
        double novoSalario = salarioAtual * 1.04;
        double aumento = novoSalario - salarioAtual;
        return String.format("Novo salario: %.2f\nReajuste ganho: %.2f\nEm percentual: 4 %%", novoSalario, aumento);
    }
}
